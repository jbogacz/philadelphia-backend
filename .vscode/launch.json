{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Philadelphia Tests with Coverage",
      "skipFiles": ["<node_internals>/**"],
      // "runtimeExecutable": "npm",
      // "runtimeArgs": [
      //   "run-script",
      //   "test"
      // ],
      // If you want to run the command directly instead of using an npm script:
      "program": "${workspaceFolder}/node_modules/c8/bin/c8.js",
      "args": ["node", "--test", "-r", "ts-node/register", "test/**/*.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Philadelphia Tests",
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": true,
      "args": [
        "--enable-source-maps",
        "--test",
        "--inspect-port=9229",
        "${workspaceFolder}/test/**/*.ts"
      ],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Philadelphia Test",
      "skipFiles": ["<node_internals>/**"],
      "args": [
        "--enable-source-maps",
        "--test",
        "--inspect-port=9229",
        "${workspaceFolder}/test/features/ad/ad.routes.test.ts"
      ],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    }
  ]
}
